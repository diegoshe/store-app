<h1>Add new game</h1>

{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>

    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Name Game</label>
        <span class="helper-text" data-error="enter name" ></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}">
        <label for="price">Price Game</label>
        <span class="helper-text" data-error="enter price" ></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">URL Img</label>
        <span class="helper-text" data-error="enter url img" ></span>
    </div>
    {{!-- добовляем этот input всем формам которые делают POST запрос; безопасность --}}
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add Game</button>

</form>